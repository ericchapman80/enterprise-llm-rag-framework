# Brewfile for RAG-Enabled LLM Framework
# This file helps set up the local development environment using Rancher Desktop

# Rancher Desktop dependencies
brew "kubernetes-cli"
brew "helm"

# Ollama for local LLM hosting
brew "ollama"

# Python environment
brew "python@3.10"
brew "poetry"

# Node.js for Backstage plugin
brew "node@18"
brew "yarn"

# Docker CLI for container management
brew "docker"
brew "docker-compose"

# Utilities
brew "jq"
brew "yq"
brew "httpie"
